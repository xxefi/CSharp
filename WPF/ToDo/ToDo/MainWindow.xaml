<Window x:Class="ToDo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Список дел" Height="559" Width="365" Closing="Window_Closing">
    <Grid>
        <TextBlock
            Text="Список дел"
            FontSize="46"
            FontWeight="Bold"
            HorizontalAlignment="Left" Margin="50,0,0,466" />

        <Button
            Content="Добавлять"
            Name="AddToDo"
            Command="{Binding AddTaskCommand}"
            Style="{DynamicResource MaterialDesignPaperDarkButton}"
            VerticalAlignment="Top" Margin="0,129,0,0"/>

        <Button
            Content="Удалять"
            Name="RemoveToDo"
            Style="{DynamicResource MaterialDesignPaperDarkButton}"
            VerticalAlignment="Top" Margin="0,160,0,0"/>

        <ListBox
            x:Name="ToDoList"
            Foreground="Transparent"
            Background="White" Margin="0,193,0,0"
            BorderBrush="Black"/>
    </Grid>
</Window>
